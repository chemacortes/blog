{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "new article",
      "detail": "Creación de un artículo para blog.ch3m4.org",
      "type": "process",
      "command": "${config:python.pythonPath}",
      "args": [
        "${workspaceFolder}/src/blog/new_article.py",
        "${input:title}",
        "${input:category}"
      ],
      "problemMatcher": {
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(.*) '([^']*)'.*$",
          "kind": "file",
          "message": 1,
          "file": 2
        },
        "severity": "info"
      }
    },
    {
      "label": "run doctest",
      "detail": "Ejecuta doctest sobre el fichero actual",
      "type": "process",
      "command": "${config:python.pythonPath}",
      "args": [
        "-m",
        "doctest",
        "-v",
        "${file}"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "title",
      "type": "promptString",
      "description": "Título del artículo para el blog",
      "default": "Artículo"
    },
    {
      "id": "category",
      "type": "pickString",
      "default": "Pensamientos",
      "description": "Categoría para el artículo",
      "options": [
        "Ciencia",
        "Coconut",
        "Desarrollo",
        "Matemáticas",
        "Pensamientos",
        "Python",
        "Scala",
        "Técnicas"
      ]
    }
  ]
}
